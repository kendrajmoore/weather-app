<% include partials/header %>

<div class="container">
    <header class="jumbotron">
      <div class="container">
       <h1>Welcome to Yelp Campgrounds</h1>
        <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
        </p>
      </div>
    </header>

          <div class="row">
             <div class="col-lg-12">
                 <h3>Our most popular sites</h3>
               </div>
             </div>

          <div class="row" style="display: flex; flex-wrap: wrap;">
          <% campgrounds.forEach(function(campgrounds){ %>
              <div class="col-md3 col-sm-6">
                <div class="thumbnail">
                  <img src="<%= campgrounds.image %>">
                </div>
                <div class="caption">
                    <h4><%=campgrounds.name %></h4>
                </div>
             </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
